@model StarFood.Models.Pedido

@{
    ViewData["Title"] = "Crear Pedido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="rounded-box">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <h4 class="text-center">Pedido</h4>
        <hr />
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="form-group mb-3">
                        <label asp-for="IDUsuario" class="form-label"></label>
                        <input asp-for="IDUsuario" class="form-control" />
                        <span asp-validation-for="IDUsuario" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="FechaPedido" class="form-label"></label>
                        <input asp-for="FechaPedido" class="form-control" type="date" />
                        <span asp-validation-for="FechaPedido" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="FechaEntrega" class="form-label"></label>
                        <input asp-for="FechaEntrega" class="form-control" type="date" />
                        <span asp-validation-for="FechaEntrega" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary btn-custom">Crear</button>
                        <a asp-action="Index" class="btn btn-secondary btn-custom ms-3">Volver a la lista</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .btn-custom {
        font-size: 1.2rem;
        font-weight: bold;
        color: white;
        background-color: var(--color-secondary);
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn-custom:hover {
            background-color: var(--color-light);
            color: var(--color-secondary);
        }

    .rounded-box {
        background-color: var(--color-dark);
        padding: 20px;
        border-radius: 10px;
    }

    h1, h4 {
        color: var(--color-light);
    }

    .form-label {
        color: var(--color-light);
    }

    .form-control {
        background-color: var(--color-light);
        border: 1px solid var(--color-secondary);
        color: var(--color-dark);
    }

        .form-control:focus {
            border-color: var(--color-accent);
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

    .text-danger {
        color: var(--color-accent);
    }
</style>
