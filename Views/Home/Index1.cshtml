@{
    ViewData["Title"] = "Home Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <div class="container mt-3">
        <h1 class="page-title">Administración</h1>
    </div>

    <!-- Bootstrap Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" rel="stylesheet">

</head>
<body>
    <!-- Panel de Información -->
    <div class="panel panel-info custom-panel mt-2">
        <div class="panel-heading">
            <h2 class="panel-title">Información Relevante de Starfood</h2>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="info-box">
                        <i class="bi bi-graph-up"></i>
                        <h4>Ventas del Día</h4>
                        <p>$1,250</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="info-box">
                        <i class="bi bi-people"></i>
                        <h4>Clientes Atendidos</h4>
                        <p>75</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="info-box">
                        <i class="bi bi-basket"></i>
                        <h4>Productos Vendidos</h4>
                        <p>150</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <!-- Reducido el margen superior -->
        <h2>Analisis de Datos</h2>
    </div>

    <section class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">

            <div class="col">
                <a href="/otra-vista">
                    <div class="card fixed-card-size">
                        <!-- Clase para tamaño fijo -->
                        <div class="card-body reduced-space-card-body">
                            <p class="card-text reduced-margin-text">Niveles de Inventario</p>
                            <canvas id="inventoryChart"></canvas> <!-- Gráfico de inventario -->
                        </div>
                    </div>
                </a>
            </div>

            <div class="col">
                <a href="/otra-vista">
                    <div class="card fixed-card-size">
                        <!-- Clase para tamaño fijo -->
                        <div class="card-body reduced-space-card-body">
                            <p class="card-text reduced-margin-text">Estadísticas de Facturación</p>
                            <canvas id="billingChart"></canvas> <!-- Gráfico de facturación -->
                        </div>
                    </div>
                </a>
            </div>

            <div class="col">
                <a href="/otra-vista">
                    <div class="card fixed-card-size">
                        <!-- Clase para tamaño fijo -->
                        <div class="card-body reduced-space-card-body">
                            <p class="card-text reduced-margin-text">Productos más Vendidos</p>
                            <canvas id="productsChart"></canvas> <!-- Gráfico de productos -->
                        </div>
                    </div>
                </a>
            </div>

        </div>
    </section>

    <!-- Chart.js Library -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- Scripts para generar los gráficos -->
    <script>
        // Gráfico de Inventario
        var ctx = document.getElementById('inventoryChart').getContext('2d');
        var inventoryChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Producto 1', 'Producto 2', 'Producto 3'],
                datasets: [{
                    label: 'Cantidad en Inventario',
                    data: [10, 20, 30],
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Gráfico de Facturación
        var ctx = document.getElementById('billingChart').getContext('2d');
        var billingChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Enero', 'Febrero', 'Marzo'],
                datasets: [{
                    label: 'Facturación',
                    data: [1000, 2000, 3000],
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Gráfico de Productos Más Vendidos
        var ctx = document.getElementById('productsChart').getContext('2d');
        var productsChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: ['Producto A', 'Producto B', 'Producto C'],
                datasets: [{
                    label: 'Ventas',
                    data: [300, 500, 200],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true
            }
        });
    </script>

</body>

<style>
    .custom-carousel {
        height: 40vh; /* Ajusta la altura del carrusel */
        margin-top: 1rem; /* Menor margen superior */
    }

    .custom-carousel-inner {
        height: 100%;
    }

    .custom-carousel-caption {
        top: 40%; /* Ajusta el valor para mover el texto más hacia arriba */
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        font-size: 4rem; /* Tamaño de fuente grande */
        font-weight: bold; /* Negrita */
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); /* Sombra para destacar el texto */
    }

    .page-title {
        margin-left: -4.5rem; /* Margen negativo para mover el título a la izquierda */
    }

    .mt-5 {
        margin-top: 1rem !important; /* Menor margen superior */
    }

    .card-text {
        margin-bottom: 0.25rem; /* Reducir margen inferior */
    }

    canvas {
        max-height: 200px;
        margin: 0 auto;
    }

    .fixed-card-size {
        height: 270px; /* Ajusta la altura según sea necesario */
    }

    .reduced-space-card-body {
        display: flex;
        flex-direction: column;
        justify-content: flex-start; /* Alinear al inicio para reducir espacio */
        padding: 0.5rem; /* Ajusta el padding */
    }

    .reduced-margin-text {
        margin: 0.5rem 0 1rem 0; /* Reduce el espacio entre el texto y el gráfico */
    }

    .panel {
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #f8f9fa;
        padding: 20px;
    }

    .panel-heading {
        margin-bottom: 20px;
    }

    .panel-title {
        font-size: 2rem;
        font-weight: bold;
        color: #007bff;
        text-align: center;
    }

    .info-box {
        text-align: center;
        padding: 10px;
    }

        .info-box i {
            font-size: 2.5rem;
            color: #007bff;
            margin-bottom: 10px;
        }

        .info-box h4 {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .info-box p {
            font-size: 1.25rem;
        }

</style>

</html>
