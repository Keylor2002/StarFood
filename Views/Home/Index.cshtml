@{
    ViewData["Title"] = "Principal Cocina";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>

    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap5.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" type="text/css" href="~/css/index.css">
    <link rel="stylesheet" type="text/css" href="~/css/_sidebar.css">
</head>

<body>
    <div class="container-fluid mt-4">
        <div class="row">
            <!-- Sidebar Izquierdo -->
            <div class="col-md-6">
                <div class="row mb-3 align-items-center">
                    <div class="col-md-8">
                        <h2 class="mb-0">@ViewData["Title"]</h2>
                        <p class="text-muted">Aquí puedes ver los pedidos de los clientes</p>
                    </div>
                    <div class="col-md-4 text-end">
                        <button id="btnCreateOrder" class="btn btn-info newitem-open"><i class="fas fa-plus"></i> Nuevo Pedido </button>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-12">
                        <div class="alert alert-info" role="alert">
                            <strong>Total de Pedidos:</strong> 0
                        </div>
                    </div>
                </div>

                <table id="ordersTable" class="table table-striped nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>ID Pedido</th>
                            <th>Cliente</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Aquí se irán agregando los pedidos -->
                    </tbody>
                </table>
            </div>

            <!-- Contenido Derecho -->
            <div class="col-md-6">
                <h3>Detalles del Pedido</h3>
                <div id="orderDetails" class="border p-3 fixed-size mb-4">
                    <!-- Aquí se mostrarán los detalles del pedido seleccionado -->
                    <p>Selecciona un pedido para ver los detalles</p>
                </div>

                <!-- Información adicional para el personal de cocina -->
                <h4>Distribución de Pedidos</h4>
                <div class="border p-3 fixed-chart-size">
                    <canvas id="ordersChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal para Crear Pedido -->
    <div class="modal fade" id="createOrderModal" tabindex="-1" role="dialog" aria-labelledby="createOrderModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createOrderModalLabel">Crear Pedido</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="create-order-form">
                        <div class="form-group">
                            <label for="Cliente" class="col-form-label">Cliente:</label>
                            <input id="Cliente" name="Cliente" class="form-control form-element" />
                        </div>
                        <div class="form-group">
                            <label for="Estado" class="col-form-label">Estado:</label>
                            <select id="Estado" name="Estado" class="form-control form-element">
                                <option value="Pendiente">Pendiente</option>
                                <option value="En Proceso">En Proceso</option>
                                <option value="Completado">Completado</option>
                            </select>
                        </div>

                        <div class="form-group row justify-content-center mt-3">
                            <button type="submit" class="btn btn-info mx-2 button-narrow">Crear</button>
                            <button type="button" class="btn btn-secondary mx-2 button-narrow" data-bs-dismiss="modal">Cancelar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap Bundle (incluye Popper.js y Bootstrap JS) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- DataTables JS -->
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap5.min.js"></script>

    <!-- DataTables Responsive -->
    <script type="text/javascript" src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/responsive/2.2.9/js/responsive.bootstrap5.min.js"></script>

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            var table = $('#ordersTable').DataTable({
                responsive: true,
                language: {
                    lengthMenu: "Mostrar _MENU_ registros por página",
                    zeroRecords: "No se encontraron registros coincidentes",
                    info: "Mostrando página _PAGE_ de _PAGES_",
                    infoEmpty: "No hay registros disponibles",
                    infoFiltered: "(filtrado de _MAX_ registros totales)",
                    paginate: {
                        first: "Primero",
                        last: "Último",
                        next: "Siguiente",
                        previous: "Anterior"
                    },
                    aria: {
                        sortAscending: ": activar para ordenar la columna de manera ascendente",
                        sortDescending: ": activar para ordenar la columna de manera descendente"
                    }
                }
            });

            var ordersData = {
                pending: 0,
                inProcess: 0,
                ready: 0
            };

            $('#ordersTable tbody').on('click', 'tr', function () {
                var data = table.row(this).data();
                $('#orderDetails').html(`
                    <h5>ID Pedido: ${data[0]}</h5>
                    <p><strong>Cliente:</strong> ${data[1]}</p>
                    <div class="mb-3">
                        <label for="Estado" class="form-label"><strong>Estado:</strong></label>
                        <select id="Estado" class="form-control form-element">
                            <option value="Pendiente" ${data[2] === "Pendiente" ? "selected" : ""}>Pendiente</option>
                            <option value="En Proceso" ${data[2] === "En Proceso" ? "selected" : ""}>En Proceso</option>
                            <option value="Listo" ${data[2] === "Listo" ? "selected" : ""}>Listo</option>
                        </select>
                    </div>
                    <p><strong>Platillos/Productos:</strong></p>
                    <ul>
                        <li>Platillo/Producto 1 - Cantidad: 2</li>
                        <li>Platillo/Producto 2 - Cantidad: 1</li>
                        <li>Platillo/Producto 3 - Cantidad: 3</li>
                    </ul>
                `);
            });

            $('#create-order-form').submit(function (e) {
                e.preventDefault();
                var orderData = $(this).serializeArray();
                var newRow = '<tr>' +
                    '<td>' + (table.rows().count() + 1) + '</td>' +
                    '<td>' + orderData[0].value + '</td>' +
                    '<td>' + orderData[1].value + '</td>' +
                    '</tr>';
                $('#ordersTable tbody').append(newRow);
                $('#createOrderModal').modal('hide');
                $('#create-order-form')[0].reset();

                updateOrderStatusSummary(orderData[1].value);
            });

            function updateOrderStatusSummary(status) {
                if (status === "Pendiente") {
                    ordersData.pending++;
                } else if (status === "En Proceso") {
                    ordersData.inProcess++;
                } else if (status === "Completado") {
                    ordersData.ready++;
                }

                $('#pendingOrders').text(ordersData.pending);
                $('#inProcessOrders').text(ordersData.inProcess);
                $('#readyOrders').text(ordersData.ready);

                updateOrdersChart();
            }

            function updateOrdersChart() {
                var ctx = document.getElementById('ordersChart').getContext('2d');
                var ordersChart = new Chart(ctx, {
                    type: 'pie',
                    data: {
                        labels: ['Pendiente', 'En Proceso', 'Listo'],
                        datasets: [{
                            label: 'Estado de Pedidos',
                            data: [ordersData.pending, ordersData.inProcess, ordersData.ready],
                            backgroundColor: [
                                'rgba(255, 99, 132, 0.2)',
                                'rgba(54, 162, 235, 0.2)',
                                'rgba(75, 192, 192, 0.2)'
                            ],
                            borderColor: [
                                'rgba(255, 99, 132, 1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(75, 192, 192, 1)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false
                    }
                });
            }

            updateOrdersChart();
        });
    </script>
</body>

<style>
    .fixed-size {
        height: 400px;
        overflow-y: auto;
        border: 1px solid #dee2e6;
    }
    .fixed-chart-size {
        height: 300px;
    }
</style>

</html>
