@{
    ViewData["Title"] = "Pagina Principal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <div class="header-container">
        <a href="tu-enlace-de-WhatsApp" class="whatsapp-button">
            <i class="bi bi-whatsapp"></i>
        </a>
    </div>

    <!-- Bootstrap Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" rel="stylesheet">

</head>
<body>
    <div class="container mt-3">
        <h1 class="page-title">Página Principal</h1>
    </div>
    <!-- Contenido de la página, incluyendo el carrusel -->
    <div id="carouselExampleAutoplaying" class="carousel slide custom-carousel mt-2" data-bs-ride="carousel">
        <div class="carousel-inner custom-carousel-inner">

            <div class="carousel-item active">
                <img src="\Imagenes\comida.jpg" class="d-block w-100 carousel-img" alt="...">
                <div class="carousel-caption custom-carousel-caption">
                    <h1>Bienvenidos a Starfood</h1>
                </div>
            </div>

            <div class="carousel-item">
                <img src="\Imagenes\casado.jpg" class="d-block w-100 carousel-img" alt="...">
                <div class="carousel-caption custom-carousel-caption">
                    <h1>Tus Comidas Favoritas</h1>
                </div>
            </div>

            <div class="carousel-item">
                <img src="\Imagenes\ensalada.jpg" class="d-block w-100 carousel-img" alt="...">
                <div class="carousel-caption custom-carousel-caption">
                    <h1>Disfruta de Nuestra Variedad de Platillos</h1>
                </div>
            </div>

        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <div class="mt-3">
        <!-- Reducido el margen superior -->
        <h2>Elige una opción</h2>
    </div>

    <section class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">

            <div class="col">
                <div class="card fixed-card-size custom-card" data-bs-toggle="modal" data-bs-target="#pedidoModal">
                    <!-- Clase para tamaño fijo -->
                    <div class="card-body reduced-space-card-body">
                        <div class="card-icon">
                            <i class="bi bi-receipt"></i>
                        </div>
                        <p class="card-text reduced-margin-text">Pedido</p>
                        <p>Visualiza y gestiona tus pedidos actuales.</p>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card fixed-card-size custom-card" data-bs-toggle="modal" data-bs-target="#recomendacionesModal">
                    <!-- Clase para tamaño fijo -->
                    <div class="card-body reduced-space-card-body">
                        <div class="card-icon">
                            <i class="bi bi-star"></i>
                        </div>
                        <p class="card-text reduced-margin-text">Recomendaciones</p>
                        <p>Recibe sugerencias de platillos basadas en tus preferencias.</p>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card fixed-card-size custom-card" data-bs-toggle="modal" data-bs-target="#ofertasModal">
                    <!-- Clase para tamaño fijo -->
                    <div class="card-body reduced-space-card-body">
                        <div class="card-icon">
                            <i class="bi bi-tag"></i>
                        </div>
                        <p class="card-text reduced-margin-text">Ofertas Especiales</p>
                        <p>Consulta las promociones y descuentos disponibles hoy.</p>
                    </div>
                </div>
            </div>

        </div>
    </section>

    <!-- Modales -->
    <!-- Modal Pedido -->
    <div class="modal fade" id="pedidoModal" tabindex="-1" aria-labelledby="pedidoModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="pedidoModalLabel">Pedido</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Contenido del modal para Pedido -->
                    <p>Aquí puedes visualizar y gestionar tus pedidos actuales.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Recomendaciones -->
    <div class="modal fade" id="recomendacionesModal" tabindex="-1" aria-labelledby="recomendacionesModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="recomendacionesModalLabel">Recomendaciones</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Contenido del modal para Recomendaciones -->
                    <p>Aquí puedes recibir sugerencias de platillos basadas en tus preferencias.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Ofertas Especiales -->
    <div class="modal fade" id="ofertasModal" tabindex="-1" aria-labelledby="ofertasModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ofertasModalLabel">Ofertas Especiales</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Contenido del modal para Ofertas Especiales -->
                    <p>Aquí puedes consultar las promociones y descuentos disponibles hoy.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <button id="btnSendOrder" class="btn btn-info">Enviar Pedido</button>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap Bundle (incluye Popper.js y Bootstrap JS) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#btnSendOrder').click(function () {
                if (confirm("¿Estás seguro de que quieres enviar el pedido?")) {
                    // Lógica para enviar el pedido
                    alert("Pedido enviado con éxito.");
                }
            });
        });
    </script>

</body>

<style>
    .custom-carousel {
        height: 40vh; /* Ajusta la altura del carrusel */
        margin-top: 1rem; /* Menor margen superior */
    }

    .custom-carousel-inner {
        height: 100%;
    }

    .custom-carousel-caption {
        top: 40%; /* Ajusta el valor para mover el texto más hacia arriba */
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        font-size: 4rem; /* Tamaño de fuente grande */
        font-weight: bold; /* Negrita */
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); /* Sombra para destacar el texto */
    }

    .whatsapp-button {
        position: fixed;
        bottom: 20px;
        right: 20px;
        background-color: #25d366;
        color: white;
        padding: 10px;
        border-radius: 50%;
        text-align: center;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

        .whatsapp-button i {
            font-size: 24px;
        }

    .mt-5 {
        margin-top: 2rem !important;
    }

    .page-title {
        margin-left: -4.5rem; /* Margen negativo para mover el título a la izquierda */
    }

    .card-text {
        margin-bottom: 0.25rem; /* Reducir margen inferior */
    }

    .fixed-card-size {
        height: 270px; /* Ajusta la altura según sea necesario */
        border-radius: 15px; /* Bordes redondeados */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Sombra */
        transition: transform 0.3s, box-shadow 0.3s; /* Transiciones para efectos */
    }

        .fixed-card-size:hover {
            transform: translateY(-10px); /* Efecto de levantar al hacer hover */
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Sombra más intensa al hacer hover */
        }

    .custom-card {
        background-color: #f8f9fa; /* Color de fondo claro */
        border: none; /* Sin borde */
    }

        .custom-card .card-body {
            text-align: center; /* Centrar el texto */
        }

        .custom-card .card-text {
            font-size: 1.25rem; /* Tamaño de fuente más grande */
            font-weight: 500; /* Negrita */
        }

    .reduced-space-card-body {
        display: flex;
        flex-direction: column;
        justify-content: center; /* Alinear al centro para reducir espacio */
        padding: 1rem; /* Ajusta el padding */
    }

    .reduced-margin-text {
        margin: 0.5rem 0 1rem 0; /* Reduce el espacio entre el texto y el gráfico */
    }

    .custom-card .card-icon {
        font-size: 3rem; /* Tamaño de los íconos */
        margin-bottom: 1rem; /* Margen inferior para separación */
        color: #007bff; /* Color de los íconos */
    }

    /* Estilo para el modal */
    .modal-content {
        border-radius: 15px;
    }

    .modal-header {
        border-bottom: none;
    }

    .modal-footer {
        border-top: none;
    }

    /* Personalizar el fondo del modal */
    .modal-backdrop.show {
        opacity: 0.2 !important; /* Ajusta la opacidad según tus necesidades */
        background-color: #000000 !important; /* Color de fondo del modal */
    }

</style>

</html>
