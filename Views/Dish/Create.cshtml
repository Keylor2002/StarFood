@model StarFood.Models.Platillo

@{
    ViewData["Title"] = "Crear Platillos";
}

<h1 class="mb-3" style="margin-left: 30px;">Crear Platillo</h1>

<div class="row">
    <div class="col-md-6 mx-auto">
        <!-- Columna centralizada -->
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-3">
                <div class="col-sm-6">
                    <!-- Primera fila -->
                    <div class="form-group">
                        <label for="Nombre" class="col-form-label">Nombre:</label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="CategoriaID" class="col-form-label">Categoría:</label>
                        <select asp-for="CategoriaID" class="form-control" asp-items="ViewBag.CategoriaID"></select>
                    </div>
                    <div class="form-group">
                        <label for="Precio" class="col-form-label">Precio:</label>
                        <input asp-for="Precio" class="form-control" />
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Descripcion" class="col-form-label">Descripción:</label>
                        <input asp-for="Descripcion" class="form-control" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group row mb-3">
                <div class="button-container">
                    <button type="submit" class="btn btn-primary">Crear</button>
                    <a asp-action="Index" style="color: darkgray "class="btn btn-secondary">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
