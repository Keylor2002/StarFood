@using StarFood.Utility
@model IEnumerable<Categoria>

@{
    ViewData["Title"] = "Categorías Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap5.min.css"/>

    <!-- Custom CSS -->
    <link rel="stylesheet" type="text/css" href="~/css/styles.css">
</head>
    <div class="container mt-4">
        <div class="row mb-3 align-items-center">
            <div class="col-md-8">
                <h2 class="mb-0">Categorías</h2>
                <p class="text-muted">Gestiona todas las categorías de productos/platillos aquí</p>
            </div>
            <div class="col-md-4 text-end">
                <a class="btn btn-info" asp-action="Create"><i class="fas fa-plus"></i> Crear Nueva Categoría</a>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-12">
                <div class="alert alert-info" role="alert">
                    <strong>Total de Categorías:</strong> @Model.Count()
                </div>
            </div>
        </div>

        <table id="categoriesTable" class="table table-striped nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Nombre</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.IDCategoria)</td>
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>
                            <div class="dropdown">
                                <button class="btn btn-link p-0 dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-three-dots"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
                                    <li><a class="dropdown-item text-dark" asp-action="Edit" asp-route-id="@item.IDCategoria"><i class="fas fa-pencil-alt"></i> Editar</a></li>
                                    <li><a class="dropdown-item text-dark" href="javascript:void(0);" onclick="toggleSuspend('@item.IDCategoria')">Habilitar/Deshabilitar</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap Bundle (incluye Bootstrap JS) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- DataTables JS -->
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
