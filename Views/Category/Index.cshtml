@using StarFood.Utility
@model IEnumerable<Categoria>

@{
    ViewData["Title"] = "Categorías Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var newCategory = new StarFood.Models.Categoria();
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>

    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap5.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" type="text/css" href="~/css/index.css">
    <link rel="stylesheet" type="text/css" href="~/css/_sidebar.css">
</head>

<body>
    <div class="container mt-4">
        <div class="row mb-3 align-items-center">
            <div class="col-md-8">
                <h2 class="mb-0">@ViewData["Title"]</h2>
                <p class="text-muted">Gestiona todas las categorías de productos aquí</p>
            </div>
            <div class="col-md-4 text-end">
                <button id="btnCreateCategory" class="btn btn-info newitem-open"><i class="fas fa-plus"></i> Crear Nueva Categoría</button>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-12">
                <div class="alert alert-info" role="alert">
                    <strong>Total de Categorías:</strong> @Model.Count()
                </div>
            </div>
        </div>

        <table id="categoriesTable" class="table table-striped nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Nombre</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.IDCategoria)</td>
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>
                            <div class="dropdown pb-4">
                                <a href="/#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="see-options" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span class="d-none d-sm-inline mx-1"><i id="see-options-icon" class="bi bi-three-dots"></i></span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                                    <li>asegurar</li>
                                    <li>asegurar</li>
                                    <li>asegurar</li>
                                    @* <li><a class="dropdown-item text-dark" href="@Url.Action("Edit", "Category", new { id = @item.IDCategoria })"><i class="fas fa-pencil-alt"></i> Editar</a></li>
                                    <li><a class="dropdown-item text-dark" href="javascript:void(0);" onclick="toggleSuspend('@item.IDCategoria')">Habilitar/Deshabilitar</a></li> *@
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- New Item Sidebar -->
    <div id="newItemSidebar" class="newitem">
        <a href="javascript:void(0)" class="newitem-close">&times;</a>
        @await Html.PartialAsync("_CreateWindow", newCategory)
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap Bundle (incluye Popper.js y Bootstrap JS) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- DataTables JS -->
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap5.min.js"></script>

    <!-- DataTables Responsive -->
    <script type="text/javascript" src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/responsive/2.2.9/js/responsive.bootstrap5.min.js"></script>
    <script src="~/js/newitem.js"></script>
    <script src="~/js/_sidebar.js"></script>
    <script src="~/js/index.js"></script>
</body>
</html>
