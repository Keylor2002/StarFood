@model StarFood.Models.Categoria

@{
    ViewData["Title"] = "Crear Categoría";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-3 text-center">Crear Categoría</h1> <!-- Centrar el título -->

<div class="row justify-content-center">
    <div class="col-md-6">
        <!-- Columna centralizada -->
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-3">
                <div class="col-sm-6 mx-auto">
                    <!-- Centrar la primera fila -->
                    <div class="form-group">
                        <label for="Nombre" class="col-form-label">Nombre:</label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group row mb-3">
                <div class="col text-center">
                    <!-- Centrar los botones -->
                    <button type="submit" class="btn btn-info">Crear</button>
                    <a asp-action="Index" class="btn btn-info">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#createCategoryForm").on("submit", function (event) {
                event.preventDefault(); // Prevenir el envío del formulario por defecto

                var categoria = {
                    Nombre: $("#Nombre").val()
                };

                $.ajax({
                    url: '@Url.Action("Create", "Category")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(categoria),
                    success: function (response) {
                        if (response.success) {
                            window.location.href = '@Url.Action("Index", "Category")'; // Redirigir a la página de índice si es exitoso
                        } else {
                            // Mostrar errores si hay alguno
                            alert("Error al crear la categoría.");
                        }
                    },
                    error: function (error) {
                        console.log(error);
                    }
                });
            });
        });
    </script>
}
