<!-- Floating Window -->
<div class="modal fade" id="floatingWindow" tabindex="-1" aria-labelledby="floatingWindowLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="floatingWindowLabel">Floating Window</h5>
                <button type="button" id="minimized" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Contenido de la ventana flotante -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" id="minimizeButton" class="btn btn-primary" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#floatingWindow">Minimize</button>
                <button type="button" id="maximizeButton" class="btn btn-primary" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#floatingWindow">Maximize</button>
            </div>
        </div>
    </div>
</div>

<script>
    // Función para abrir la ventana flotante
    function openFloatingWindow() {
        document.getElementById('floatingWindow').classList.add('show');
    }

    // Función para minimizar la ventana flotante
    function minimizeFloatingWindow() {
        document.getElementById('floatingWindow').classList.add('minimized');
    }

    // Función para maximizar la ventana flotante
    function maximizeFloatingWindow() {
        document.getElementById('floatingWindow').classList.remove('minimized');
    }

    // Agregar eventos a los botones
    document.getElementById('floatingWindow').addEventListener('shown.bs.modal', openFloatingWindow);
    document.getElementById('floatingWindow').addEventListener('hidden.bs.modal', function () {
        document.getElementById('floatingWindow').classList.remove('minimized');
    });

    document.getElementById('minimizeButton').addEventListener('click', minimizeFloatingWindow);
    document.getElementById('maximizeButton').addEventListener('click', maximizeFloatingWindow);

</script>

