<script>
    document.addEventListener('DOMContentLoaded', function () {
    // Obtener el nombre de la ruta actual
    const currentPath = window.location.pathname;

    // Mostrar el sidebar de inventario solo si estamos en la vista de inventario
    const inventorySidebar = document.getElementById('inventory-sidebar');
    const mainSidebar = document.getElementById('sidebar');
    if (currentPath.includes('/Inventario/Index')) {
        inventorySidebar.style.display = 'block';
        mainSidebar.style.display = 'none';
    } else {
        inventorySidebar.style.display = 'none';
        mainSidebar.style.display = 'block';
    }

    // Función para minimizar el sidebar de inventario
    function minimizeInventorySidebar() {
        inventorySidebar.classList.add('minimized');
        inventorySidebar.querySelector('.sidebar-title').style.display = 'none';
        inventorySidebar.querySelectorAll('.sidebar-nav li a').forEach(link => {
            link.querySelector('span').style.display = 'none';
            link.querySelector('i').style.marginLeft = '5px';
        });
    }

    // Función para maximizar el sidebar de inventario
    function maximizeInventorySidebar() {
        inventorySidebar.classList.remove('minimized');
        inventorySidebar.querySelector('.sidebar-title').style.display = 'block';
        inventorySidebar.querySelectorAll('.sidebar-nav li a').forEach(link => {
            link.querySelector('span').style.display = 'inline';
            link.querySelector('i').style.marginLeft = '0';
        });
    }

    // Agregar evento al botón de toggle del sidebar de inventario
    document.getElementById('inventory-sidebar-toggle').addEventListener('click', function () {
        if (inventorySidebar.classList.contains('minimized')) {
            maximizeInventorySidebar();
        } else {
            minimizeInventorySidebar();
        }
    });

    // Agregar eventos de clic para redirigir a las vistas respectivas del sidebar de inventario
    document.getElementById('ver-inventario-link').addEventListener('click', function (event) {
        event.preventDefault();
        window.location.href = '/Inventario/Ver';
    });

    document.getElementById('actualizar-inventario-link').addEventListener('click', function (event) {
        event.preventDefault();
        window.location.href = '/Inventario/Actualizar';
    });

    document.getElementById('niveles-stock-link').addEventListener('click', function (event) {
        event.preventDefault();
        window.location.href = '/Inventario/Niveles';
    });

    document.getElementById('productos-agotarse-link').addEventListener('click', function (event) {
        event.preventDefault();
        window.location.href = '/Inventario/Agotarse';
    });
});
</script>