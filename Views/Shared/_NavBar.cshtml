@using StarFood.Utility
<!--Stock NavBar-->
<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Bootstrap Bundle (incluye Bootstrap JS) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- jQuery (asegúrate de incluirlo antes de los scripts de validación) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- jQuery Validate y jQuery Validate Unobtrusive -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

<!-- Font Awesome -->
<script src="https://kit.fontawesome.com/a076d05399.js"></script>
<div>
<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" id="navbar-stock">
    <div class="container-fluid">
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                        <a class="nav-link text-dark" href="#" id="categorias-link"><i class="bi bi-list-task"></i><span> Categorías  <i class="bi bi-caret-right-fill"></i></span></a>
                </li>
                <li class="nav-item">
                        <a class="nav-link text-dark" href="#" id="productos-link"><i class="bi bi-basket"></i><span> Producto  <i class="bi bi-caret-right-fill"></i></span></a>
                </li>
                <li class="nav-item">
                        <a class="nav-link text-dark" href="#" id="platillos-link"><i class="bi bi-egg-fried"></i><span> Platillos  <i class="bi bi-caret-right-fill"></i></span></a>
                </li>
                @if (User.IsInRole(Roles.Admin_Role))
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Categorias" asp-action="Index">Categorías</a>
                    </li>
                }
            </ul>
            <partial name="_LoginPartial" />
        </div>
    </div>
</nav>
</div>
<script>
    // Agregar eventos de clic para redirigir a las vistas respectivas
    document.getElementById('categorias-link').addEventListener('click', function (event) {
        event.preventDefault();
        window.location.href = '/Category/Index';
    });

    document.getElementById('productos-link').addEventListener('click', function (event) {
        event.preventDefault();
        window.location.href = '/Product/Index';
    });

    document.getElementById('platillos-link').addEventListener('click', function (event) {
        event.preventDefault();
        window.location.href = '/Dish/Index';
    });

</script>