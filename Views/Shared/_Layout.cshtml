@using StarFood.Utility;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StarFood</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>
<body>

        
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">StarFood</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

    @if (User.IsInRole(Roles.Admin_Role))
    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Categorias" asp-action="Index">Categorías</a>
                        </li>
    }
                    </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>

    @if (User.IsInRole(Roles.Admin_Role))
    {
        <div class="sidebar">
            <div class="d-flex flex-column p-3 text-dark bg-light" style="width: 250px;">
                <hr>
                <ul class="nav nav-pills flex-column mb-auto">
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Home")" class="nav-link active" aria-current="page">
                            <i class="fas fa-home"></i> Home
                        </a>
                    </li>
                    <li>
                        <a href="#" class="nav-link link-dark">
                            <i class="fas fa-users"></i> Usuarios
                        </a>
                    </li>
                    <li>
                        <a href="#" class="nav-link link-dark">
                            <i class="fas fa-money-bill"></i> Facturación
                        </a>
                    </li>
                    <hr>
                    <li>
                        <h4>Inventario</h4>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Categorias")" class="nav-link link-dark">
                            <i class="fas fa-tags"></i> Categorías
                        </a>
                    </li>
                    <li>
                        <a href="#" class="nav-link link-dark">
                            <i class="fas fa-utensils"></i> Menús
                        </a>
                    </li>
                    <li>
                        <a href="#" class="nav-link link-dark">
                            <i class="fas fa-archive"></i> Productos
                        </a>
                    </li>
                    <li>
                        <a href="#" class="nav-link link-dark">
                            <i class="fas fa-utensil-spoon"></i> Platillos
                        </a>
                    </li>
                    <hr>
                    <li>
                        <h4>Pedidos</h4>
                    </li>
                    <li>
                        <a href="#" class="nav-link link-dark">
                            <i class="fas fa-box"></i> Pedidos
                        </a>
                    </li>
                    <li>
                        <a href="#" class="nav-link link-dark">
                            <i class="fas fa-truck"></i> Proveedores
                        </a>
                    </li>
                    <li>
                        <a href="#" class="nav-link link-dark">
                            <i class="fas fa-history"></i> Historial
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="text-left">
            <div class="container-fluid">
                <header class="row py-0">
                    <div class="col-md-6">
                        <h1 class="display-5">Soda La Estrella del Sur</h1>
                        <p class="lead" style="color: #69D0D7;">Starfood</p>
                    </div>
                </header>
            </div>

            <div class="container mt-4">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <a href="" class="nav-link">
                                    <i class="fas fa-tags fa-3x mb-3"></i>
                                    <h5 class="card-title">Categorías</h5>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <a href="url-de-menus" class="nav-link">
                                    <i class="fas fa-box fa-3x mb-3"></i>
                                    <h5 class="card-title">Productos</h5>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <a href="url-de-menus" class="nav-link">
                                    <i class="fas fa-utensils fa-3x mb-3"></i>
                                    <h5 class="card-title">Menús</h5>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <a href="url-de-platillos" class="nav-link">
                                    <i class="fas fa-utensil-spoon fa-3x mb-3"></i>
                                    <h5 class="card-title">Platillos</h5>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <a href="url-de-proveedores" class="nav-link">
                                    <i class="fas fa-truck fa-3x mb-3"></i>
                                    <h5 class="card-title">Proveedores</h5>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <a href="url-de-historial" class="nav-link">
                                    <i class="fas fa-history fa-3x mb-3"></i>
                                    <h5 class="card-title">Historial</h5>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

        <div class="main-content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
