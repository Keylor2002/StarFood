@model StarFood.Models.Producto

@{
    ViewData["Title"] = "Crear Producto";
}

<h1 class="mb-3 text-center">Crear Producto</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <!-- Columna centralizada -->
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label for="IDProducto" class="col-form-label">ID Producto:</label>
                <input asp-for="IDProducto" class="form-control form-element" readonly />
                <span asp-validation-for="IDProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Nombre" class="col-form-label">Nombre:</label>
                <input asp-for="Nombre" class="form-control form-element" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CategoriaID" class="col-form-label">Categoría:</label>
                <select asp-for="CategoriaID" class="form-control form-element" asp-items="@(ViewBag.Categorias)"></select>
                <span asp-validation-for="CategoriaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="PrecioVenta" class="col-form-label">Precio de Venta:</label>
                <input asp-for="PrecioVenta" class="form-control form-element" />
                <span asp-validation-for="PrecioVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="UnidadMedida" class="col-form-label">Unidad de Medida:</label>
                <select asp-for="UnidadMedida" class="form-control form-element" asp-items="@(ViewBag.UnidadesMedida)"></select>
                <span asp-validation-for="UnidadMedida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Suspendido" class="col-form-label">Suspendido:</label>
                <select asp-for="Suspendido" class="form-control form-element" asp-items="@(ViewBag.SuspendidoOptions)"></select>
                <span asp-validation-for="Suspendido" class="text-danger"></span>
            </div>

            <div class="form-group row justify-content-center mt-3">
                <button type="submit" class="btn btn-info mx-2 button-narrow">Crear</button>
                <a asp-action="Index" class="btn btn-info mx-2 button-narrow">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .form-element {
        width: 100%;
    }

    .button-container {
        display: flex;
        justify-content: center;
        gap: 10px; /* Espacio entre los botones */
        margin-top: 20px; /* Separar botones del último dropdown */
    }

    .button-narrow {
        width: 100px; /* Ancho de los botones */
    }
</style>
