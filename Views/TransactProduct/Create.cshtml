@model StarFood.Models.TransaccionProducto

@{
    ViewData["Title"] = "Agregar Lote Producto";
}

<h1 class="mb-3" style="margin-left: 30px;">Agregar Lote Producto</h1>

<div class="row">
    <div class="col-md-6 mx-auto">

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-3">
                <div class="col-sm-6">

                    <div class="form-group">
                        <label for="IDProducto" class="col-form-label">Producto:</label>
                        <select asp-for="IDProducto" class="form-control" asp-items="@(new SelectList(ViewBag.Productos, "Value", "Text"))"></select>
                        <span asp-validation-for="IDProducto" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="IDProveedor" class="col-form-label">Proveedor:</label>
                        <select asp-for="IDProveedor" class="form-control" asp-items="@(new SelectList(ViewBag.Proveedores, "Value", "Text"))"></select>
                        <span asp-validation-for="IDProveedor" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="PrecioCosto" class="col-form-label">Precio de Costo:</label>
                        <input asp-for="PrecioCosto" class="form-control" />
                        <span asp-validation-for="PrecioCosto" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="cantidad" class="col-form-label">Cantidad de producto:</label>
                        <input asp-for="cantidad" class="form-control" />
                        <span asp-validation-for="cantidad" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="PrecioVenta" class="col-form-label">PrecioVenta:</label>
                        <input asp-for="PrecioVenta" class="form-control" />
                        <span asp-validation-for="PrecioVenta" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">

                    <div class="form-group">
                        <label for="FechaCaducidad" class="col-form-label">Fecha de Caducidad:</label>
                        <input asp-for="FechaCaducidad" class="form-control" />
                        <span asp-validation-for="FechaCaducidad" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="FechaCompra" class="col-form-label">Fecha de Compra:</label>
                        <input asp-for="FechaCompra" class="form-control" />
                        <span asp-validation-for="FechaCompra" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group row mb-3">
                <div class="button-container">
                    <button type="submit" class="btn btn-info">Crear</button>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-info">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
