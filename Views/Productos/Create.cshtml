@model StarFood.Models.Producto

@{
    ViewData["Title"] = "Crear Producto";
}

<h1 class="mb-3" style="margin-left: 30px;">Crear Producto</h1>

<div class="row">
    <div class="col-md-6 mx-auto">
        <!-- Columna centralizada -->
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-3">
                <div class="col-sm-6">
                    <!-- Primera fila -->
                    <div class="form-group">
                        <label for="Nombre" class="col-form-label">Nombre:</label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="CategoriaID" class="col-form-label">Categoría:</label>
                        <select asp-for="CategoriaID" class="form-control" asp-items="ViewBag.CategoriaID"></select>
                    </div>
                    <div class="form-group">
                        <label for="PrecioCosto" class="col-form-label">Precio de Costo:</label>
                        <input asp-for="PrecioCosto" class="form-control" />
                        <span asp-validation-for="PrecioCosto" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="PrecioVenta" class="col-form-label">Precio de Venta:</label>
                        <input asp-for="PrecioVenta" class="form-control" />
                        <span asp-validation-for="PrecioVenta" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <!-- Segunda fila -->
                    <div class="form-group">
                        <label for="UnidadMedida" class="col-form-label">Unidad de Medida:</label>
                        <input asp-for="UnidadMedida" class="form-control" />
                        <span asp-validation-for="UnidadMedida" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="FechaCaducidad" class="col-form-label">Fecha de Caducidad:</label>
                        <input asp-for="FechaCaducidad" class="form-control" />
                        <span asp-validation-for="FechaCaducidad" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="FechaCompra" class="col-form-label">Fecha de Compra:</label>
                        <input asp-for="FechaCompra" class="form-control" />
                        <span asp-validation-for="FechaCompra" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="IDProveedor" class="col-form-label">ID del Proveedor:</label>
                        <select asp-for="IDProveedor" class="form-control" asp-items="ViewBag.IDProveedor"></select>
                    </div>
                </div>
            </div>
            <div class="form-group row mb-3">
                <div class="button-container">
                    <button type="submit" class="btn btn-primary">Crear</button>
                    <a asp-action="Index" style="color: darkgray "class="btn btn-secondary">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
