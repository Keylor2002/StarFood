@page
@model LoginModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Log In";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StarFood</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/LoginStyles.css" asp-append-version="true" />
</head>
<body>
    <section class="container">
        <section class="left-section d-flex align-items-center justify-content-center">
            <section class="login">
                <h1>Bienvenidos</h1>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form id="account" method="post">
                    <input asp-for="Input.Email" class="form-control text-dark" autocomplete="username" aria-required="true" />
                    <label asp-for= "Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                    <br />
                    <input asp-for="Input.Password" class="form-control text-dark" autocomplete="Current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <div class="button-group">
                        <button type="login-submit" class="btn btn-primary btn-large d-inline-block">Ingresar</button>
                        <button id="register" type="button" class="btn btn-secondary btn-large d-inline-block" onclick="location.href='@Url.Page("./Register", new { returnUrl = Model.ReturnUrl })'">Registrarse</button>
                    </div>
                </form>
            </section>
        </section>
    </section>

    <partial name="_ValidationScriptsPartial" />
</body>
</html>
